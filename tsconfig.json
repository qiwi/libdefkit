{
  "compilerOptions": {
    "lib": [
      "es2021",
      "dom"
    ],
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/test"
  ]
}
